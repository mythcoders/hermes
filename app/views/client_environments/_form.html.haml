= f.hidden_field :id
= f.hidden_field :client_id

.form-row
  .form-group.col
    = f.label :name, class: 'col-form-label'
    = f.text_field :name, class: 'form-control'
  .form-group.col
    = f.label :status, class: 'col-form-label'
    = f.select :status, ClientEnvironment.statuses.map { |key, value| [key.humanize, key] }, {}, {class: 'custom-select'}
