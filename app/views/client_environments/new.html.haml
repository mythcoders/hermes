- page_title 'New', 'API Permissions'

.header
  .header-body
    .row.align-items-center
      .col
        %h6.header-pretitle
          API Permissions
        %h1.header-title
          = fa_solid 'clipboard-list'
          Create a new API Permission

= form_for @environment, url: client_environments_path do |f|
  = error_messages_for 'environment'
  = render partial: 'client_environments/form', locals: { f: f }
  %hr.mt-5.mb-5
  = f.submit 'Create permission', class: 'btn btn-block btn-primary'
  = link_to 'Cancel', client_path(@environment.client), class: 'btn btn-block btn-link text-muted'
