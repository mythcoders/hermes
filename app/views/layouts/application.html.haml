!!!
%html{html_attrs('en-us')}
  %head
    = render partial: 'layouts/partials/header'
  %body.dark-mode{"data-sidebar-type": "overlayed-sm-and-down",
                  "data-set-preferred-mode-onload": "true",
                  "data-dm-shortcut-enabled": "true",
                  "data-sidebar-shortcut-enabled": "true"}
    .page-wrapper.with-navbar.with-sidebar.with-transitions
      = render partial: 'layouts/partials/logout'
      .sticky-alerts
      = render partial: 'layouts/partials/navbar'
      = render partial: 'layouts/partials/sidebar'
      .content-wrapper
        = render partial: 'layouts/partials/alerts'
        = yield :breadcrumbs
        = yield
        %footer.text-muted.text-center.pt-5.mb-3.font-size-12
          MythCoders, LLC.
          %br
          %span
            Made with
            %i.fas.fa-heart.text-danger
            in Ohio.
    = yield :scripts

