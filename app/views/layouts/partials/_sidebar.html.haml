.sidebar-sticky
  %ul.nav.flex-column
    %li.nav-item.my-30
      %a.nav-link{sidebar_link(home_path, home_action?('index'))}
        = fa_regular 'home'
        Dashboard
    %h6.sidebar-heading.d-flex.justify-content-between.align-items-center.px-3.mt-4.mb-1.text-muted
      %span Administration

    %h6.sidebar-heading.d-flex.justify-content-between.align-items-center.px-3.mt-4.mb-1.text-muted
      %span Actions
    %li.nav-item.mt-1
      %a.nav-link{profile_link}
        = fa_regular 'user-circle'
        Manage Account
    %li.nav-item
      = link_to destroy_user_session_path, method:'delete', title: 'Sign out', class: 'nav-link', data: { confirm: 'Are you sure you want to sign out? Any unsaved changes will be lost.' } do
        = fa_regular 'sign-out-alt'
        Sign Out
