- page_title 'New', 'Client'

.content
  %h1.content-title
    %i.fas.fa-code'
    Create a new client

  = form_for @client, url: clients_path do |f|
    = error_messages_for 'client'
    = render partial: 'clients/form', locals: { f: f }
    %hr.mt-5.mb-5
    = link_to 'Cancel', clients_path, class: 'btn alt-dm'
    = f.submit 'Create', class: 'btn btn-success float-right'
