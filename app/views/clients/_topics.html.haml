.card
  .card-header
    .row
      .col
        %h3.card-title
          %i.fas.fa-clipboard-list
          Mailing Topics
      .col-auto
        %a.btn.btn-sm{href: new_client_topic_path(@client)}
          New
  - if @client.topics.any?
    .table-responsive
      %table.table.card-table.table-sm
        %thead
          %tr
            %th Name
            %th Size
            %th{style: 'width: 40%'}Status
        %tbody
          - @client.topics.order(:name).each do |t|
            %tr
              %td= link_to t.name, edit_client_topic_path(@client, t)
              %td= t.subscriptions.count
              %td
                - if t.active
                  %span.badge.badge-success.badge-pill.text-uppercase active
                - else
                  %span.badge.badge-secondary.badge-pill.text-uppercase inactive
  - else
    .card-body.text-center.bg-transparent
      %h3.content-title No Topics
      %p.text-muted This client does not have any topics saved.