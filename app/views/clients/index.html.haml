- page_title 'Client Search'

.content
  .row
    .col
      %h1.content-title.font-size-22
        = fa_solid 'code'
        Clients
    .col-auto
      = link_to 'New Client', new_client_path, class: 'btn btn-primary lift'

.card
  %table-responsive
    %table.table.table-sm.card-table
      %thead
        %tr
          %th Name
          %th Owner
          %th API Access
      %tbody
        - @clients.each do |c|
          %tr
            %td= link_to c.name, client_path(c)
            %td= c.owner
            %td
              - if c.is_active
                %span.badge.badge-success.badge-pill.text-uppercase Approved
              - else
                %span.badge.badge-danger.badge-pill.text-uppercase Blocked
  .mt-20
    = paginate @clients
    = page_entries_info @clients
