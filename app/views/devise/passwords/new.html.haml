- content_for :header do
  Forgot Password

= render partial: 'devise/shared/error_messages'
= form_for(resource, as: resource_name, url: password_path(resource_name), :html => { :method => :post, "data-turbo": "false" }) do |f|
  .form-group
    = f.email_field :email, autofocus: true, class: 'form-control', :placeholder => 'Email Address'
  .form-group
    = f.submit 'Send reset instructions', class: 'btn btn-primary btn-block btn-login'
  .login-bottom-links
    = render 'devise/shared/links'