.card
  %table-responsive
    %table.table.table-sm
      %thead
        %tr
          %th Recipient
          %th Delivered At
          %th Scheduled Send
      %tbody
        - recipients.each do |r|
          %tr
            %td
              %span.badge.badge-secondary.text-uppercase= r.recipient_type
              = r.email
            %td= r.delivered_at
            %td= r.send_at
